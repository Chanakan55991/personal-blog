---
import CategoryPosts from '../../layouts/CategoryPosts.astro'

export function getStaticPaths() {
  const categories = [
    {
      id: 'tech',
      name: 'Tech'
    },
    {
      id: 'productivity',
      name: 'Productivity'
    },
    {
      id: 'rant',
      name: 'Rant'
    },
    {
      id: 'photography',
      name: 'Photography'
    },
    {
      id: 'general',
      name: 'General'
    },
    {
      id: 'thai',
      name: 'ภาษาไทย'
    },
    {
      id: 'books',
      name: 'books'
    }
  ]
  return categories.map(({ id, name }) => {
    return {
      params: { id },
      props: { name }
    }
  })
}

const { name } = Astro.props
---

<CategoryPosts category={name} />
